@model WebApplication7.Models.Inventory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}


<style>
    textarea {
        margin: 0px;
        border-radius: 5px;
        width: 100%;
        height: 127px;
    }

    .color {
        background-color: orange;
        border: none;
        color: white;
        text-align: center;
        font-size: 16px;
        margin: 4px 2px;
        opacity: 0.6;
        transition: 0.8s;
    }

    .color2 {
        background-color: orange;
        border: none;
        color: white;
        text-align: center;
        font-size: 16px;
        margin: 4px 2px;
        opacity: 0.6;
        transition: 0.8s;
    }

    .color:hover {
        opacity: 1
    }

    .color2:hover {
        opacity: 1;
    }
</style>
<script>
    $(document).ready(function () {
     
        $("#Name").prop("required", true);
        
    });
</script>
<div class="col-md-12" id="maindiv" style="background-color:#ffffff;border-radius:5px;padding:10px;box-shadow: rgba(0, 0, 0, 0.16) 5px 10px 5px, rgba(0, 0, 0, 0.23) 0px 3px 5px">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "Registerform" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Add New Inventory</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-1 col-md-offset-1">
                    <span><b>Name</b></span>
                </div>

                <div class="col-md-6">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control",Id="Name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-1 col-md-offset-1">
                    <span><b>Description</b></span>
                </div>

                <div class="col-md-6">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }
    <div class="col-md-12 col-md-offset-2 col-sm-12 col-lg-12">
        <br />
        <button class="col-md-2 form-control color2" onclick="window.location.href='/Inventories/Index'" style="border-radius:35px;border:hidden;margin-right:10px;background-color:#ff0000;color:white;font-size:15px;width:98px;height:38px;font-family:Calibri" id="return"> Return</button>
        <input class="col-md-2 form-control color" id="submit" type="submit" form="Registerform" value="Save" style="border-radius:35px;color:white;border:hidden;background-color:slateblue;font-size:15px;width:98px;height:38px;font-family:Calibri" />
        <br /><br /><br />

    </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
